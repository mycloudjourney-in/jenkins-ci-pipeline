node {
    for (int i=0; i<2; i++) {
        stage "Stage #"+i
        print "Hello World !"
        if (i==0){
            git clone "https://github.com/mycloudjourney-in/jenkins-ci-pipeline.git"
            echo "Running on Stage #0"
        } //if cond
        else {
            echo 'Running on Stage #1'
        }
    } //for loop
}
